@model TipoCuenta
@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<h1>Crear Tipo de Cuenta</h1>
<h5>El tipo de cuenta se refiere a cómo podemos agrupar cuentas.
    Ejemplo: Préstamos, tarjetas de crédito, etc.</h5>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="TiposCuentas" asp-action="Crear">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control">
        <span asp-validation-for="Nombre"  class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control"></input>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Edad"></label>
        <input asp-for="Edad" class="form-control"></input>
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="URL"></label>
        <input asp-for="URL" class="form-control"></input>
        <span asp-validation-for="URL" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TarjetaDeCredito"></label>
        <input asp-for="TarjetaDeCredito" class="form-control"></input>
        <span asp-validation-for="TarjetaDeCredito" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
</body>
</html>